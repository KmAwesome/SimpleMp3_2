<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/viewLogo"
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:padding="5dp"
        android:src="@drawable/note_view_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/noteTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:singleLine="true"
                android:textColor="@color/colorTextTitle" />

            <TextView
                android:id="@+id/noteArtist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/colorTextTitle" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/notePrev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/note_btn_prev" />

        <ImageButton
            android:id="@+id/notePlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/note_btn_play" />

        <ImageButton
            android:id="@+id/noteNext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/note_btn_next"/>

        <ImageButton
            android:id="@+id/noteClose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/note_btn_close" />

    </LinearLayout>

</LinearLayout>