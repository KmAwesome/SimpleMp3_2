<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_control_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.MainActivity">

    <ProgressBar
        android:id="@+id/mp3_seekbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_icon"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/main_view_mp3_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:freezesText="true"
                android:gravity="left|bottom"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="SongTitle"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txv_artist"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="left|top"
                android:text="SongArtist"
                android:singleLine="true"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnRepeat"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:src="@drawable/main_btn_repeat_all" />

        <ImageButton
            android:id="@+id/imgbtn_play"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:src="@drawable/main_btn_play" />

        <ImageButton
            android:id="@+id/imgbtn_next"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:src="@drawable/main_btn_play_next" />
    </LinearLayout>

</LinearLayout>